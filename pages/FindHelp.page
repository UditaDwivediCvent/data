                    $scope.names=JSON.parse(result);
                    $scope.currentPage = 1; 
                    $scope.totalItems = $scope.names.length;
                    $scope.numPerPage = 20;
                    $scope.paginate = function (value){ 
                        var begin, end, index; 
                        begin = ($scope.currentPage - 1) * $scope.numPerPage; 
                        end = begin + $scope.numPerPage; 
                        index = $scope.names.indexOf(value); 
